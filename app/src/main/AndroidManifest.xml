<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xmlspace.kanban">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Fullscreen">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MaterialKanban"
            android:label="@string/title_activity_material_kanban"
            android:theme="@style/Fullscreen" />
        <activity
            android:name=".FinishedGoodsKanban"
            android:label="@string/title_activity_finished_goods_kanban"
            android:theme="@style/Fullscreen" />
        <activity
            android:name=".SemiFinishedKanban"
            android:label="@string/title_activity_semi_finished_kanban"
            android:theme="@style/Fullscreen" />
        <activity
            android:name=".MaterialChart"
            android:label="@string/title_activity_material_chart"
            android:theme="@style/Fullscreen" />
        <activity
            android:name=".ProductChart"
            android:label="@string/title_activity_product_chart"
            android:theme="@style/Fullscreen"></activity>
    </application>

</manifest>